[*.cs]
indent_style = space
indent_size = 2
tab_width = 2

# Brace style
csharp_new_line_before_open_brace = none       # for methods, properties, events
csharp_new_line_before_open_brace_types = true # for classes, interfaces, structs
csharp_new_line_before_open_brace_control_blocks = none # for if, else, for, while, etc



# spaces inside parentheses
csharp_space_between_method_call_parameter_list_parentheses = false
csharp_space_between_method_declaration_parameter_list_parentheses = false

# space after keywords
csharp_space_after_keywords_in_control_flow_statements = true

# space around operators
csharp_space_around_binary_operators = before_and_after
csharp_space_after_cast = true

# spaces in object/collection initializers
csharp_space_between_empty_braces = false
